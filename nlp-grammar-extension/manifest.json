{
  "manifest_version": 3,
  "name": "NLP-assisted Grammar Detection System",
  "version": "1.0",
  "description": "Detects basic grammar and spelling mistakes using rule-based NLP.",
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
